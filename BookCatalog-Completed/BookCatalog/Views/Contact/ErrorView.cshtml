@model Contact
@*
    Layout = "~/Views/Shared/_Layout.cshtml";
*@

<ul class="menu">
    <li><a onclick="geri()"><i class="fas fa-arrow-left" style="cursor: pointer; padding-right: 20px;"></i></a> İrtibat Ekle</li>
</ul>
<ul></ul>
</nav>

@if (ViewBag.ErrorTitle == null)
{

    <article class="container">
        <div class="item">
            <div class="alert alert-secondary" role="alert">
                <h4 style="display:block; margin-top:20px; color:black;">Hata Oluştu!!!</h4>
                <h6 class="text-dark">Oluşan hata en yakın zamanda detek birimi tarafından düzeltilecektir</h6>
            </div>
            <form asp-controller="Contact" asp-action="deletepost" method="post">
                <div class="row">
                    <div class="col-25">
                        <label for="contactType" style="font-weight: 700;">Tipi</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-25">
                        <label for="name" style="font-weight: 700;">Ad</label>
                    </div>
                    <div class="col-75">
                        <input type="text" disabled id="name" asp-for="Name" name="name">
                    </div>
                </div>
                <div class="row">
                    <div class="col-25">
                        <label for="Title" style="font-weight: 700;">Unvan</label>
                    </div>
                    <div class="col-75">
                        <input type="text" disabled id="Title" asp-for="Title" name="Title">
                    </div>
                </div>
                <div class="row">
                    <div class="col-25">
                        <label for="mobile" style="font-weight: 700;">Cep Telefonu</label>
                    </div>
                    <div class="col-75">
                        <input type="text" disabled id="mobile" asp-for="Mobile" name="mobile">
                    </div>
                </div>
                <div class="row">
                    <div class="col-25">
                        <label for="email" style="font-weight: 700;">E-mail</label>
                    </div>
                    <div class="col-75">
                        <input type="text" disabled id="email" asp-for="Email" name="email">
                    </div>
                </div>

                <div class="row" style="margin-top: 20px;">
                    <button type="submit" class="submitButton"><a>Kaydet</a></button>
                </div>
            </form>
        </div>

    </article>
   

}
else
{

    <article class="container">
        <div class="item">
            <div class="alert alert-secondary" role="alert">
                <h4 style="display:block; margin-top:20px; color:black;">@ViewBag.ErrorTitle</h4>
                <h6 class="text-dark">@ViewBag.ErrorMessage</h6>
            </div>
            <form asp-controller="Contact" asp-action="deletepost" method="post">
                <div class="row">
                    <div class="col-25">
                        <label for="contactType" style="font-weight: 700;">Tipi</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-25">
                        <label for="name" style="font-weight: 700;">Ad</label>
                    </div>
                    <div class="col-75">
                        <input type="text" disabled id="name" asp-for="Name" name="name">
                    </div>
                </div>
                <div class="row">
                    <div class="col-25">
                        <label for="Title" style="font-weight: 700;">Unvan</label>
                    </div>
                    <div class="col-75">
                        <input type="text" disabled id="Title" asp-for="Title" name="Title">
                    </div>
                </div>
                <div class="row">
                    <div class="col-25">
                        <label for="mobile" style="font-weight: 700;">Cep Telefonu</label>
                    </div>
                    <div class="col-75">
                        <input type="text" disabled id="mobile" asp-for="Mobile" name="mobile">
                    </div>
                </div>
                <div class="row">
                    <div class="col-25">
                        <label for="email" style="font-weight: 700;">E-mail</label>
                    </div>
                    <div class="col-75">
                        <input type="text" disabled id="email" asp-for="Email" name="email">
                    </div>
                </div>

            </form>
        </div>

    </article>

}


<script src="~/js/BookCategory.js"></script>
