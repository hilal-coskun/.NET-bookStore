@model Order
@*
    Layout = "~/Views/Shared/_Layout.cshtml";
*@

<ul class="menu">
    <li><a onclick="geri()"><i class="fas fa-arrow-left" style="cursor: pointer; padding-right: 20px;"></i></a> Sipariş Ekle</li>
</ul>
<ul></ul>
</nav>

@if (ViewBag.ErrorTitle == null)
{
    <article class="container">
        <div class="item" style="margin-left:-10px;">
            <div class="alert alert-secondary" role="alert">
                <h4 style="display:block; margin-top:20px; color:black;">Hata Oluştu!!!</h4>
                <h6 class="text-dark">Oluşan hata en yakın zamanda detek birimi tarafından düzeltilecektir</h6>
            </div>
            <form asp-controller="order" asp-action="deletePost" method="post">
                <input asp-for="ID" hidden />
                <div class="row">
                    <div class="col-25">
                        <label for="ContactID">Müşteri Adı</label>
                    </div>
                    <div class="col-75">
                        <input disabled asp-for="ContactID" type="text" id="name" name="ContactID">
                    </div>
                </div>
                <div class="row">
                    <div class="col-25">
                        <label for="payment">Ödeme Yöntemi</label>
                    </div>
                    <div class="col-75">
                        <input disabled type="text" asp-for="PaymentChannelID" id="payment" name="payment">
                    </div>
                </div>
                <div class="row" style="margin-top: 15px;">
                    <div class="col-25">
                        <label for="name">Kitap Adı ve Adedi</label>
                    </div>
                    <div class="col-25">
                    </div>
                </div>
                <div id="card">
                    <div class="row">
                        <div class="col-25" style="margin-top: 7px;">
                            <button id="plus" style="border: none; cursor: pointer;"><i class="fas fa-plus-square" style="font-size: 20px; color: #7a91c0;"></i></button>
                            <input disabled type="text" name="bookName" id="bookName">
                        </div>
                        <div class="col-25" style="margin-top: 5px; margin-bottom: 1px;">
                            <input disabled type="number" name="" id="" style="padding: 7px; border: .5px solid rgb(211, 206, 206); appearance:textfield ; ">
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-top: 20px;">
                    <button type="submit" class="submitButton"><a>Kaydet</a></button>
                </div>
            </form>
        </div>

    </article>

}
else
{

    <article class="container">
        <div class="item" style="margin-left:-10px;">
            <div class="alert alert-secondary" role="alert">
                <h4 style="display:block; margin-top:20px; color:black;">@ViewBag.ErrorTitle</h4>
