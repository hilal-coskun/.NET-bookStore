@model Book 
@{ 

    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <ul class="menu">
        <li><a onclick="geri()"><i class="fas fa-arrow-left" style="cursor: pointer; padding-right: 20px;"></i></a> Kitap Detayı</li>
    </ul>
    <ul></ul>
</nav>
<article class="container">
    <div class="item">
        <form method="post" asp-action="detail" autocomplete="off">
            <input type="hidden" name="ID" id="ID" />
            <div class="row">
                <div class="col-25" style="width:110px; height: 110px; background-color: black; margin: 10px;">
                    <img src="" alt="">
                </div>
                <div class="col-50" style="padding-top: 20px; margin-left: 150px;">
                    <label class="header" asp-for="Name" for="name">@Model.Name</label>
                    <label for="author" asp-for="AuthorID" style="display: block; padding-bottom: 5px; font-weight: 700; font-size: 15px;">@Model.Author.Name</label>
                    <label asp-for="Blurb">
                        @Model.Blurb
                    </label>
                </div>
            </div>
            <div class="row" style="padding-top: 10px;">
                <div class="col-25">
                    <label for="bookCategory" style="font-weight: bold;">Kitap Kategorisi</label>
                </div>
                <div class="col-75">
                    <label asp-for="BookCategoryID" for="bookCategory">@Model.BookCategory.Name</label>
                </div>
            </div>
            <div class="row" style="padding-top: 5px;">
                <div class="col-25">
                    <label for="bookType" style="font-weight: bold;">Kitap Türü</label>
                </div>
                <div class="col-75">
                    <label  asp-for="BookTypeID" for="bookType" >@Model.BookType.Name</label>
                </div>
            </div>
            <div class="row" style="padding-top: 5px;">
                <div class="col-25">
                    <label for="publisher" style="font-weight: bold;">Yayınevi</label>
                </div>
                <div class="col-75">
                    <label asp-for="BookPublisherID" for="publisher">@Model.BookPublisher.ContactID</label>
                </div>
            </div>
            <div class="row" style="padding-top: 5px;">
                <div class="col-25">
                    <label for="translator" style="font-weight: bold;">Mütercim</label>
                </div>
                <div class="col-75">
                    <label  asp-for="TranslatorID" for="translator">@Model.Translator.Name</label>
                </div>
            </div>
            
            <div class="row" style="padding-top: 5px;">
                <div class="col-25">
                    <label for="ısbn" style="font-weight: bold;">ISBN</label>
                </div>
                <div class="col-75">
                    <label  asp-for="ISBN" for="ısbn">@Model.ISBN</label>
                </div>
            </div>
            
            <div class="row" style="padding-top: 5px;">
                <div class="col-25">
                    <label for="AmountOfStock" style="font-weight: bold;">AmountOfStock</label>
                </div>
                <div class="col-75">
                    <label  asp-for="AmountOfStock" for="AmountOfStock">@Model.AmountOfStock</label>
                </div>
            </div>
            <div class="row" style="padding-top: 5px;">
                <div class="col-25">
                    <label for="price" style="font-weight: bold;">Fiyat</label>
                </div>
                <div class="col-75">
                    <label  asp-for="Price" for="price">@Model.Price</label>
                </div>
            </div>
            <div class="row" style="padding-top: 5px;">
                <div class="col-25">
                    <label for="paperType" style="font-weight: bold;">Kağıt Cinsi</label>
                </div>
                <div class="col-75">
                    <label asp-for="PaperTypeID" for="paperType">@Model.PaperType.Name</label>
                </div>
            </div>
            <!--
       <div class="row" style="padding-top: 5px;">
        <div class="col-25">
            <label for="recordDate" style="font-weight: bold;">Yayın Tarihi</label>
        </div>
        <div class="col-75">
            <label for="recordDate">Model.RecordDate.ToString("dd-MM-yyyy")</label>
        </div>
    </div>
    -->
            <div class="row" style="padding-top: 5px;">
                <div class="col-25">
                    <label for="language" style="font-weight: bold;">Dil</label>
                </div>
                <div class="col-75">
                    <label asp-for="LanguageID" for="language">@Model.Language.Name</label>
                </div>
            </div>
            <div class="row" style="padding-top: 5px;">
                <div class="col-25">
                    <label for="PagesOfNumber" style="font-weight: bold;">Sayfa Sayısı</label>
                </div>
                <div class="col-75">
                    <label  asp-for="PagesOfNumber" for="PagesOfNumber">@Model.PagesOfNumber</label>
                </div>
            </div>
            <div class="row" style="margin-top: 50px;">
                <button class="detailButton" style="background-color: rgb(182, 45, 45); padding: 10px;"><a asp-controller="book" asp-action="delete" asp-route-id="@Model.ID"><i class="fas fa-trash" style="padding-right: 5px;"></i>Sil</a></button>
                <button class="detailButton" style="background-color: #7a91c0; padding: 10px;"><a asp-controller="book" asp-action="edit" asp-route-id="@Model.ID"><i class="fas fa-edit" style="padding-right: 5px;"></i>Düzenle</a></button>
            </div>
        </form>
    </div>

</article>

