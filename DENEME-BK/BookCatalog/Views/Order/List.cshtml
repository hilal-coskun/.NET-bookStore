@model OrderListViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="menu">
    <li>Siparişler</li>
</ul>
<ul>
    <button class="detailButton"><a href="../Add/index.html"><i class="fas fa-plus-square" style="padding-right: 5px;"></i>EKLE</a></button>
</ul>
            </nav>
<article class="container">
    <div class="item">
        <form action="">
            <div class="row">
                <div class="col-25">
                    <label for="name">Müşteri Adı</label>
                </div>
                <div class="col-75">
                    <input type="text" id="name" name="name">
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="orderStatus">Sipariş Durumu</label>
                </div>
                <div class="col-75">
                    <select name="orderStatus" id="orderStatus">
                        <option value="Beklemede">Beklemede</option>
                        <option value="Hazırlanıyor">Hazırlanıyor</option>
                        <option value="KargoyaVerildi">Kargoya Verildi</option>
                        <option value="TeslimEdildi">Teslim Edildi</option>
                        <option value="IptalEdildi">Iptal Edildi</option>
                        <option value="OdemeBekleniyor">Odeme Bekleniyor</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="date">Sipariş Tarihi</label>
                </div>
                <div class="col-75">
                    <input type="date" id="date" name="date">
                </div>
            </div>
            <div class="row" style="margin-top: 20px;">
                <button class="detailButton"><a href=""><i class="fas fa-filter" style="padding-right: 5px;"></i>Filtrele</a></button>
            </div>
        </form>
    </div>
    <div class="item">
        <table class="table">
            <th>Sipariş Durumu</th>
            <th>Müşteri Adı</th>
            <th>Sipariş Tarihi</th>
            <th>Detay</th>
            <tbody>

                @foreach (var order in Model.Order)
                {
                    <tr>
                        <td data-title="Sipariş Durumu">@order.OrderStatusID</td>
                        <td data-title="Müşteri Adı">@order.CustomerID</td>
                        <td data-title="Sipariş Tarihi">@order.RecordDate.</td>
                        <td data-title="Detay">
                            <button class="detailButton"><a href="../Detail/index.html"><i class="fas fa-info-circle" style="padding-right: 5px;"></i>Detay</a></button>
                        </td>
                    </tr>
                }

            </tbody>
        </table>

        <div class="pages">
            <ul style="display: flex; justify-content: center;">
                <li><a href="">1</a></li>
                <li><a href="">2</a></li>
                <li><a href="">3</a></li>
                <li><a href="">4</a></li>
                <li><a href="">5</a></li>
                <li><a href="">6</a></li>
                <li><a href="">7</a></li>
            </ul>
            <div style="text-align: center;">
                Toplam 10 kayıt bulundu
            </div>
        </div>
        <div class="pageDirection">
            <a href="" style="color: #7a91c0;"><i class="fas fa-arrow-left"></i></a>
            <a href="" style="color: #7a91c0;"><i class="fas fa-arrow-right"></i></a>
        </div>
    </div>
</article>
