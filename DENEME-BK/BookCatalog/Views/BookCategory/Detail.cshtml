@model BookCategory
@*
    Layout = "~/Views/Shared/_Layout.cshtml";
*@


   <ul class="menu">
    <li><a onclick="geri()"><i class="fas fa-arrow-left" style="cursor: pointer; padding-right: 20px;"></i></a> Kitap Kategorisi Detayı</li>
</ul>
<ul></ul>
</nav>
<article class="container">
    <div class="item">
        <form method="post">
            <input type="hidden" name="ID" id="ID" value="@Model.ID" />
            <div class="row">
                <div class="col-25">
                    <label for="name">Ad</label>
                </div>
                <div class="col-75">
                    <label asp-for="Name">@Model.Name</label>
                </div>
            </div>
            <div class="row" style="margin-top: 20px;">
                <button class="detailButton" style="background-color: rgb(182, 45, 45);padding:10px"><a href=""><i class="fas fa-trash" style="padding-right: 5px;"></i>Sil</a></button>
                <button class="detailButton" style="background-color: #7a91c0; padding: 10px;"><a asp-controller="bookCategory" asp-action="edit"><i class="fas fa-edit" style="padding-right: 5px;"></i>Düzenle</a></button>
            </div>
        </form>
    </div>
</article>
