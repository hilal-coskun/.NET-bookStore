<article class="container">
    <div class="item">
        <form action="">
            <div class="row">
                <div class="col-25">
                    <label for="name">Ad</label>
                </div>
                <div class="col-75">
                    <input type="text" id="name" name="name">
                </div>
            </div>
            <div class="row" style="margin-top: 20px;">
                <button class="detailButton"><a href=""><i class="fas fa-filter" style="padding-right: 5px;"></i>Filtrele</a></button>
            </div>
        </form>
    </div>
    <div class="item">
        <table class="table">
            <th>Ad</th>
            <th>Detay</th>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td data-title="Ad" class="name">@category.Name</td>
                        <td data-title="Detay">
                            <button class="detailButton"><a asp-controller="BookCategory" asp-action="detail" asp-route-id="@category.ID"><i class="fas fa-info-circle" style="padding-right: 5px;"></i>Detay</a></button>
                        </td>
                    </tr>
                }

            </tbody>
        </table>

