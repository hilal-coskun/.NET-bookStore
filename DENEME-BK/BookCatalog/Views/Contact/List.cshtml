@model ContactListViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <ul class="menu">
        <li>İrtibat</li>
    </ul>
    <ul>
        <button class="detailButton"><a asp-controller="Contact" asp-action="Add"><i class="fas fa-plus-square" style="padding-right: 5px;"></i>EKLE</a></button>
    </ul>
</nav>
<article class="container">
    <div class="item">
        <form action="">
            <div class="row">
                <div class="col-25">
                    <label for="contactType">Tipi</label>
                </div>
                <div class="col-75">
                    <select name="contactType" id="contactType">
                        <option value="Kisi">Kişi</option>
                        <option value="firma">Firma</option>
                        <option value="hepsi">Hepsi</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="name">Ad</label>
                </div>
                <div class="col-75">
                    <input type="text" id="name" name="name">
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="phone">Cep Telefonu</label>
                </div>
                <div class="col-75">
                    <input type="text" id="phone" name="phone">
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="email">E-posta</label>
                </div>
                <div class="col-75">
                    <input type="text" id="email" name="email">
                </div>
            </div>
            <div class="row" style="margin-top: 20px;">
                <button class="detailButton"><a href=""><i class="fas fa-filter" style="padding-right: 5px;"></i>Filtrele</a></button>
            </div>
        </form>
    </div>
    <div class="item">
        <table class="table">
            <th>Tipi</th>
            <th>Ad</th>
            <th>Cep Telefonu</th>
            <th>Detay</th>
            <tbody>
                @foreach (var contactItem in Model.Contact)
                {
                   <tr>
                       <td data-title="Ad" class="contactType">@contactItem.IsCorporation</td>
                       <td data-title="Ad" class="name">@contactItem.Name</td>
                       <td>@contactItem.Mobile</td>
                       <td data-title="Detay">
                           <button class="detailButton"><a asp-controller="Contact" asp-action="detail" asp-route-id="@contactItem.ID"><i class="fas fa-info-circle" style="padding-right: 5px;"></i>Detay</a></button>
                       </td>
                   </tr>
                 }

            </tbody>
        </table>
        <div class="pages">
            <ul style="display: flex; justify-content: center;">
                <li><a href="">1</a></li>
                <li><a href="">2</a></li>
                <li><a href="">3</a></li>
                <li><a href="">4</a></li>
                <li><a href="">5</a></li>
                <li><a href="">6</a></li>
                <li><a href="">7</a></li>
            </ul>
            <div style="text-align: center;">
                Toplam 10 kayıt bulundu
            </div>
        </div>
        <div class="pageDirection">
            <a href="" style="color: #7a91c0;"><i class="fas fa-arrow-left"></i></a>
            <a href="" style="color: #7a91c0;"><i class="fas fa-arrow-right"></i></a>
        </div>
    </div>
</article>