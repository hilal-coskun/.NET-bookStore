@model BookType

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="menu">
    <li><a onclick="geri()"><i class="fas fa-arrow-left" style="cursor: pointer; padding-right: 20px;"></i></a> Kitap Türü Detayı</li>
</ul>
<ul></ul>
            </nav>
<article class="container">
    <div class="item">
        <form method="post">
            <input type="hidden" name="ID" id="ID" />
            <div class="row">
                <div class="col-25">
                    <label for="bookCategory">Kitap Kategori</label>
                </div>
                <div class="col-75">
                    <label asp-for="BookCategoryID" for="name">Bilgisayar & Mühendislik</label>
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="name">Ad</label>
                </div>
                <div class="col-75">
                    <label asp-for="Name" for="name">Bilgisayar </label>
                </div>
            </div>
            <div class="row" style="margin-top: 20px;">
                <button class="detailButton" style="background-color: rgb(182, 45, 45); padding: 10px;"><a asp-controller="BookType" asp-action="delete" asp-route-id="@Model.ID"><i class="fas fa-trash" style="padding-right: 5px;"></i>Sil</a></button>
                <button class="detailButton" style="background-color: #7a91c0; padding: 10px;"><a asp-controller="BookType" asp-action="edit" asp-route-id="@Model.ID"><i class="fas fa-edit" style="padding-right: 5px;"></i>Düzenle</a></button>
            </div>
        </form>
    </div>

</article>