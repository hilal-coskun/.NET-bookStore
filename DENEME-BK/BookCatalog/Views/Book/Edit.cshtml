@model Book
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<ul class="menu">
    <li><a onclick="geri()"><i class="fas fa-arrow-left" style="cursor: pointer; padding-right: 20px;"></i></a> Kitap Düzenle</li>
</ul>
<ul></ul>
            </nav>
<article class="container">
    <div class="item">
        <form method="post" asp-action="edit">
            <div class="row">
                <div class="col-25">
                    <label for="name" style="font-weight: bold;">Ad</label>
                </div>
                <div class="col-75">
                    <input type="text" asp-for="Name" name="name" id="name">
                </div>
            </div>
            <div class="row" style="padding-top: 10px;">
                <div class="col-25">
                    <label for="author" style="font-weight: bold;">Yazar Adı</label>
                </div>
                <div class="col-75">
                    <input type="text" asp-for="Author.Name" id="author"  name="author"/>
                </div>
            </div>
            <div class="row" style="padding-top: 10px;">
                <div class="col-25">
                    <label for="blurb">Hakkında</label>
                </div>
                <div class="col-75">
                    <textarea type="text" asp-for="Blurb" id="blurb" name="blurb"></textarea>
                </div>
            </div>
            <div class="row" style="padding-top: 10px;">
                <div class="col-25">
                    <label for="bookCategory" style="font-weight: bold;">Kitap Kategorisi</label>
                </div>
                <div class="col-75">
                    <input type="text" asp-for="BookCategory.Name" name="bookCategory" id="bookCategory">
                </div>
            </div>
            <div class="row" style="padding-top: 10px;">
                <div class="col-25">
                    <label for="bookType" style="font-weight: bold;">Kitap Türü</label>
                </div>
                <div class="col-75">
                    <input type="text" asp-for="BookType.Name" name="bookType" id="bookType">
                </div>
            </div>
            <div class="row" style="padding-top: 10px;">
                <div class="col-25">
                    <label for="publisher" style="font-weight: bold;">Yayınevi</label>
                </div>
                <div class="col-75">
                    <input type="text" name="publisher" asp-for="BookPublisher.ContactID" id="publisher">
                </div>
            </div>
            <div class="row" style="padding-top: 10px;">
                <div class="col-25">
                    <label for="language" style="font-weight: bold;">Dil</label>
                </div>
                <div class="col-75">
                    <input type="text" asp-for="Language.Name" name="language" id="language">
                </div>
            </div>
            <div class="row" style="padding-top: 10px;">
                <div class="col-25">
                    <label for="paperType" style="font-weight: bold;">Kağıt Tipi</label>
                </div>
                <div class="col-75">
                    <input type="text" asp-for="PaperType.Name" name="paperType" id="paperType">
                </div>
            </div>
            <div class="row" style="padding-top: 10px;">
                <div class="col-25">
                    <label for="PagesOfNumber" style="font-weight: bold;">Sayfa Sayısı</label>
                </div>
                <div class="col-75">
                    <input type="text" asp-for="PagesOfNumber" name="PagesOfNumber" id="PagesOfNumber">
                </div>
            </div>
            <div class="row" style="padding-top: 10px;">
                <div class="col-25">
                    <label for="ısbn" style="font-weight: bold;">ISBN</label>
                </div>
                <div class="col-75">
                    <input type="text" asp-for="ISBN" name="ısbn" id="ısbn">
                </div>
            </div>
            <div class="row" style="padding-top: 10px;">
                <div class="col-25">
                    <label for="translator" style="font-weight: bold;">Mütercim</label>
                </div>
                <div class="col-75">
                    <input type="text" asp-for="Translator.Name" name="translator" id="translator">
                </div>
            </div>
            <div class="row" style="padding-top: 10px;">
                <div class="col-25">
                    <label for="AmountOfStock" style="font-weight: bold;">Stok Sayısı</label>
                </div>
                <div class="col-75">
                    <input type="text" asp-for="AmountOfStock" name="AmountOfStock" id="stok">
                </div>
            </div>
            <div class="row" style="padding-top: 10px;">
                <div class="col-25">
                    <label for="price" style="font-weight: bold;">Fiyat</label>
                </div>
                <div class="col-75">
                    <input type="text" asp-for="Price" name="price" id="price">
                </div>
            </div>
            <div class="row" style="margin-top: 30px;">
                <button type="submit" class="submitButton"><a>Kaydet</a></button>
            </div>
        </form>
    </div>

</article>