@model BookPublisherListViewModel


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <ul class="menu">
        <li>Yayınevleri</li>
    </ul>
    <ul>
        <button class="detailButton"><a href="../Add/index.html"><i class="fas fa-plus-square" style="padding-right: 5px;"></i>EKLE</a></button>
    </ul>
</nav>
<article class="container">
    <div class="item">
        <form action="">
            <div class="row">
                <div class="col-25">
                    <label for="name">Ad</label>
                </div>
                <div class="col-75">
                    <input type="text" id="name" name="name">
                </div>
            </div>
            <div class="row" style="margin-top: 20px;">
                <button class="detailButton"><a href=""><i class="fas fa-filter" style="padding-right: 5px;"></i>Filtrele</a></button>
            </div>
        </form>
    </div>
    <div class="item">
        <table class="table">
            <th>Ad</th>
            <th>Kayıt Tarihi</th>
            <th>Detay</th>
            
            <tbody>
                @foreach (var publisher in Model.BookPublisher)
                {
                <tr>
                    <td data-title="Ad" class="name">@publisher.Name</td>
                    <td data-title="date" class="date">@publisher.RecordDate</td>
                    <td data-title="Detay">
                        <button class="detailButton"><a href=""><i class="fas fa-info-circle" style="padding-right: 5px;"></i>Detay</a></button>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        <div class="pages">
            <ul style="display: flex; justify-content: center;">
                <li><a href="">1</a></li>
                <li><a href="">2</a></li>
                <li><a href="">3</a></li>
                <li><a href="">4</a></li>
                <li><a href="">5</a></li>
                <li><a href="">6</a></li>
                <li><a href="">7</a></li>
            </ul>
            <div style="text-align: center;">
                Toplam 10 kayıt bulundu
            </div>
        </div>
        <div class="pageDirection">
            <a href="" style="color: #7a91c0;"><i class="fas fa-arrow-left"></i></a>
            <a href="" style="color: #7a91c0;"><i class="fas fa-arrow-right"></i></a>
        </div>
    </div>
</article>