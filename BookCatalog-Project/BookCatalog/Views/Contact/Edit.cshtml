@model Contact 
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <ul class="menu">
        <li><a onclick="geri()"><i class="fas fa-arrow-left" style="cursor: pointer; padding-right: 20px;"></i></a> İrtibat Düzenle</li>
    </ul>
    <ul></ul>
</nav>
<article class="container">
    <div class="item">
        <form method="post" asp-action="edit">
            <div class="row">
                <div class="col-25">
                    <label for="contactType" style="font-weight: 700;">Tipi</label>
                </div>
                <div class="col-75">
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="name" style="font-weight: 700;">Ad</label>
                </div>
                <div class="col-75">
                    <input type="text" asp-for="Name" id="name" name="name">
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="title" style="font-weight: 700;">Unvan</label>
                </div>
                <div class="col-75">
                    <input type="text" id="title" asp-for="Title" name="title">
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                <div class="col-25">
                    <label for="mobile" style="font-weight: 700;">Cep Telefonu</label>
                </div>
                <div class="col-75">
                    <input type="text" id="mobile" asp-for="Mobile" name="mobile">
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="email" style="font-weight: 700;">E-mail</label>
                </div>
                <div class="col-75">
                    <input type="text" asp-for="Email" id="email" name="email">
                </div>
            </div>
            <div class="row" style="margin-top: 20px;">
                <button type="submit" class="submitButton"><a>Kaydet</a></button>
            </div>
        </form>
    </div>

</article>