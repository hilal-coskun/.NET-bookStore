@model Order
@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}



    <ul class="menu">
        <li><a onclick="geri()"><i class="fas fa-arrow-left" style="cursor: pointer; padding-right: 20px;"></i></a> Sipariş Detayı</li>
    </ul>
    <ul></ul>
</nav>
<article class="container">
    <div class="item">
        <form  method="post" asp-action="detail" autocomplete="off">
            <div class="row" style="margin-bottom:5px;">
                <div class="col-25" style="font-weight: 700;">
                    <label for="name">Müşteri Adı</label>
                </div>
                <div class="col-75">
                    <label for="name">@Model.CustomerID</label>
                    <button class="buton" style="padding: 3px; margin-left: 20px; border: none;"><a href="#" style="color:#5b73a3;"> <i class="fas fa-question-circle"></i> İletişim Bilgileri</a></button>
                </div>
            </div>
            <div class="row" style="margin-bottom:5px;">
                <div class="col-25" style="font-weight: 700;">
                    <label for="orderStatus">Sipariş Durumu</label>
                </div>
                <div class="col-75">
                    <label for="orderStatus">@Model.OrderStatusID</label>
                </div>
            </div>
            <div class="row" style="margin-top:15px;">
                <div class="col-50" style="font-weight: 700;">
                    <label for="">Kitaplar</label>
                </div>
                <div class="col-25">
                    <label for="">Kitap Adı:</label>
                    <label for="bookName">Yalın Startup</label>
                    <button class="buton"><a href="#"> <i class="fas fa-question-circle"></i> Kitap Bilgileri</a></button>
                </div>
                <div class="col-25">
                    <label for="amountBook">Adedi</label>
                    <label>1</label>
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="">Kitap Adı:</label>
                    <label for="bookName">Doğa Yürüyüşü</label>
                    <button class="buton"><a href="#"> <i class="fas fa-question-circle"></i> Kitap Bilgileri</a></button>
                </div>
                <div class="col-25">
                    <label for="amountBook">Adedi</label>
                    <label>2</label>
                </div>
            </div>
            <div class="row" style="margin-top: 20px;">
                <button class="detailButton" style="background-color: rgb(182, 45, 45); padding: 10px;"><a a asp-controller="order" asp-action="delete" asp-route-id="@Model.ID"><i class="fas fa-trash" style="padding-right: 5px;"></i>Sil</a></button>
                <button class="detailButton" style="background-color: #7a91c0; padding: 10px;"><a asp-controller="order" asp-action="add" asp-route-id="@Model.ID"><i class="fas fa-edit" style="padding-right: 5px;"></i>Düzenle</a></button>
            </div>
        </form>
    </div>

</article>