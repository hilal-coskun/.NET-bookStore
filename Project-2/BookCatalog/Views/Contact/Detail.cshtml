@model Contact

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="menu">
    <li><a onclick="geri()"><i class="fas fa-arrow-left" style="cursor: pointer; padding-right: 20px;"></i></a> İrtibat Detayı</li>
</ul>
<ul></ul>
            </nav>
<article class="container">
    <div class="item">
        <form action="">
            <div class="row">
                <div class="col-25">
                    <label for="contactType" style="font-weight: 700;">Tipi</label>
                </div>
                <div class="col-75">
                    <label for=""></label>
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="name" style="font-weight: 700;">Ad</label>
                </div>
                <div class="col-75">
                    <label for="name" asp-for="Name">@Model.Name</label>
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="title" style="font-weight: 700;">Unvan</label>
                </div>
                <div class="col-75">
                    <label for="title" asp-for="Title">@Model.Title</label>
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="mobile" style="font-weight: 700;">Cep Telefonu</label>
                </div>
                <div class="col-75">
                    <label for="mobile" asp-for="Mobile">@Model.Mobile</label>
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="email" style="font-weight: 700;">E-mail</label>
                </div>
                <div class="col-75">
                    <label for="email" asp-for="Email">@Model.Email</label>
                </div>
            </div>
            <div class="row" style="margin-top: 20px;">
                <button class="detailButton" style="background-color: rgb(182, 45, 45); padding: 10px;"><a asp-controller="Contact" asp-action="Delete" asp-route-id="@Model.ID"><i class="fas fa-trash" style="padding-right: 5px;"></i>Sil</a></button>
                <button class="detailButton" style="background-color: #7a91c0; padding: 10px;"><a asp-controller="Contact" asp-action="edit" asp-route-id="@Model.ID"><i class="fas fa-edit" style="padding-right: 5px;"></i>Düzenle</a></button>
            </div>
        </form>
    </div>

</article>
